{
  "name": "jamin-monorepo",
  "version": "1.2.1",
  "description": "jamin monorepo",
  "main": "index.js",
  "author": "jaminst",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "build": "lerna run --stream --sort build",
    "changed": "lerna changed",
    "bump": "lerna version",
